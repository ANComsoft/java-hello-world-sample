package com.example.azurewebapp;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
// Supprimez les imports @RestController et ResponseEntity si non utilis√©s dans cette classe.
// import org.springframework.web.bind.annotation.GetMapping;
// import org.springframework.web.bind.annotation.RestController;
// import org.springframework.http.ResponseEntity;

/**
 * Classe principale de l'application Spring Boot.
 * C'est le point d'entr√©e de notre application web.
 */
@SpringBootApplication
public class AzureWebappApplication {

    public static void main(String[] args) {
        // Lance l'application Spring Boot
        SpringApplication.run(AzureWebappApplication.class, args);
    }
}

// src/main/java/com/example/azurewebapp/HelloController.java
package com.example.azurewebapp;

import org.springframework.stereotype.Controller; // Changez @RestController √† @Controller
import org.springframework.web.bind.annotation.GetMapping;
// import org.springframework.http.ResponseEntity; // N'est plus n√©cessaire si nous retournons une vue

/**
 * Contr√¥leur pour g√©rer les requ√™tes HTTP et retourner des vues (pages HTML).
 * Il expose un endpoint "/" pour la page d'accueil.
 */
@Controller // Utilise @Controller pour retourner des vues
public class HelloController {

    /**
     * G√®re les requ√™tes GET sur l'endpoint "/".
     * Retourne le nom du template HTML √† afficher.
     * Le fichier HTML doit √™tre plac√© dans 'src/main/resources/templates/'.
     * @return Le nom du template Thymeleaf (sans l'extension .html).
     */
    @GetMapping("/") // D√©finition de l'endpoint racine
    public String home() {
        return "home"; // Ceci correspondra √† 'src/main/resources/templates/home.html'
    }
}

